<h1>Tiny App</h1>

    <% if (username) { %>
      <form method="POST" action="/logout">
        <%= username %>
        <input type="submit" value="Logout">
      </form>
    <% } else { %>
      <form method="POST" action="/login">
        <input id="username", type="text" name="userName" placeholder="USERNAME" style="width: 300px">
        <input type="submit" value="Sign In">
      </form>
    <% }; %>

